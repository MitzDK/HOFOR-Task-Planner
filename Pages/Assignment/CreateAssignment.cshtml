@page
@model HOFORTaskPlanner.Pages.Assignment.CreateAssignmentModel
@{
}
<head>
    <link rel="stylesheet" href="~/css/select.css" />
    <script src="js/select.js" type=”module”></script>
</head>
<form method="post">
    <div class="form-group">
        <label asp-for="Assignment.Status"></label>:<br />
        <select asp-for="Assignment.Status" asp-items="Html.GetEnumSelectList<Models.Assignment.AssignmentStatus>()">
            <option>Choose a Status</option>
        </select>
        <span asp-validation-for="Assignment.Status" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Assignment.Type"></label>:<br />
        <select asp-for="Assignment.Type" asp-items="Html.GetEnumSelectList<Models.Assignment.AssignmentType>()">
            <option>Choose a Type</option>
        </select>
        <span asp-validation-for="Assignment.Type" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Assignment.Area"></label>
        <input asp-for="@Model.Assignment.Area" class="form-control" />
        <span asp-validation-for="Assignment.Area" class="text-danger"></span>
    </div>
    @*<div class="form-group">
        <label asp-for="@Model.Assignment.Contact"></label>
        <input asp-for="@Model.Assignment.Contact" class="form-control" />
        <span asp-validation-for="Assignment.Contact" class="text-danger"></span>

    </div>*@
    <div class="form-group">
        <label asp-for="@Model.Assignment.Description"></label>
        <input asp-for="@Model.Assignment.Description" class="form-control" />
        <span asp-validation-for="Assignment.Description" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label asp-for="@Model.Assignment.Estimate"></label>
        <input asp-for="@Model.Assignment.Estimate" class="form-control" />
        <span asp-validation-for="Assignment.Estimate" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label asp-for="@Model.Assignment.StartDate"></label>
        <input min="@(DateTime.Today.Year-3)-01-01" max="@(DateTime.Today.Year+3)-12-31" asp-for="@Model.Assignment.StartDate" type="date" class="form-control" />
        <span asp-validation-for="Assignment.StartDate" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label asp-for="@Model.Assignment.EndDate"></label>
        <input min="@(DateTime.Today.Year-3)-01-01" max="@(DateTime.Today.Year+10)-12-31" asp-for="@Model.Assignment.EndDate" type="date" class="form-control" />
        <span asp-validation-for="Assignment.EndDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Assignment.Comment"></label>
        <input asp-for="@Model.Assignment.Comment" class="form-control" />
        <span asp-validation-for="Assignment.Comment" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AktionSearch"></label><br />
        <input type="text" list="datalist1" asp-for="AktionSearch">
        <datalist id="datalist1">
            <optgroup label="DisplayName / First & Last Name">
                @foreach (var user in Model.Users)
                {
                    <option value="@user.DisplayName">@user.FirstName @user.LastName</option>
                }
            </optgroup>
        </datalist>
    </div>
    <div class="form-group">
        <label asp-for="ControllerSearch"></label><br />
        <input type="text" list="datalist2" asp-for="ControllerSearch">
        <datalist id="datalist2">
            <optgroup label="DisplayName / First & Last Name">
                @foreach (var user in Model.Users)
                {
                    <option value="@user.DisplayName">@user.FirstName @user.LastName</option>
                }
            </optgroup>
        </datalist>
    </div>
    <div class="form-group">
        <label asp-for="ContactSearch"></label><br />
        <input type="text" list="datalist3" asp-for="ContactSearch">
        <datalist id="datalist3">
            <optgroup label="Email / First & Last Name /">
                @foreach (var contact in Model.Contacts)
                {
                    <option value="@contact.Email">@contact.FirstName @contact.LastName</option>
                }
            </optgroup>
        </datalist>
    </div>
    @*<div class="form-group">
            <label asp-for="@Model.Assignment.ControlUserId"></label>
            <input asp-for="@Model.Assignment.ControlUserId" class="form-control" />
        </div>*@
    <div class="form-group">
        <input type="submit" value="Create Assignment" class="btn btn-primary" />
    </div>

</form>
