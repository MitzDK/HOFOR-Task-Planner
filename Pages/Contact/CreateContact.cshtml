@page
@model HOFORTaskPlanner.Pages.Contact.CreateContactModel
@{
    ViewData["Title"] = "Opret Kontakt";
}
<div class="container-xl px-4 mt-4">
    <!-- Account page navigation-->
    <hr class="mt-0 mb-4">
    <div class="row">
        <div class="col-xl-8">
            <!-- Account details card-->
            <div class="card mb-4 ">
                <div class="card-header table-hofor" style="display: flex; justify-content: space-between">
                    Kontakt detaljer - opret
                    <a class="btn-hofor" style="text-decoration: none" data-toggle="tooltip" title="Forrige side" asp-page="GetContacts"><i class="fa fa-circle-left"></i> Tilbage</a>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="row gx-3 mb-3">
                            <div class="col-md-6">
                                <label asp-for="Contact.FirstName"></label>
                                <input asp-for="Contact.FirstName" class="form-control"/>
                                <span asp-validation-for="Contact.FirstName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Contact.LastName"></label>
                                <input asp-for="Contact.LastName" class="form-control" />
                                <span asp-validation-for="Contact.LastName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row gx-3 mb-3">
                            <div class="col-md-6">
                                <label asp-for="Contact.PhoneNumber"></label>
                                <input asp-for="Contact.PhoneNumber" class="form-control" />
                                <span asp-validation-for="Contact.PhoneNumber" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Contact.Email"></label>
                                <input type="email" asp-for="Contact.Email" class="form-control" />
                                <span asp-validation-for="Contact.Email" class="text-danger"></span>
                            </div>
                        </div>
                        <button class="btn btn-hofor" type="submit">Opret</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>