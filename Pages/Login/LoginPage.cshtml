<style>
    .grid-container {
        display: grid;
        grid-template-columns: auto auto auto;
        /*background-color: #2196F3;*/
        padding: 10px;
    }
    .grid-item {
        background-color: rgba(255, 255, 255, 0.8);
        /*border: 1px solid rgba(0, 0, 0, 0.8);*/
        padding: 20px;
        font-size: 30px;
        text-align: center;
    }
</style>

<body>


<div class="grid-container">
    <div class="grid-item"></div>
    <div class="grid-item"><img src="/imgs/HoforLogo.png"/></div>
    <div class="grid-item"></div>  
    <div class="grid-item"></div>
    <div class="grid-item">
        <form method="post">
            <div class="form-group">
                @*<label asp-for="Username" class="col-form-label justi"></label>*@
                <div>
                    <i class="fa fa-user" style="width: 30px"></i>
                    <input asp-for="Username" placeholder="Brugernavn"/>
                </div>
                <div class="form-group" style="padding-top: 0.1em">
                    @*<label asp-for="Password" class="col-form-label"></label>*@
                    <div style="display: compact; justify-content: left">
                        <i class="fa fa-key"></i>
                        <input asp-for="Password" placeholder="Kodeord"/>
                    </div>
                </div>
                <div class="form-group">
                    <button class="btn btn-hofor">Log in</button>
                </div>
            </div>
        </form>
    </div>
    <div class="grid-item"></div>  
    <div class="grid-item"></div>
    <div class="grid-item"></div>
    <div class="grid-item"></div>  
</div>

</body>

