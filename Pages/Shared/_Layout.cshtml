@using HOFORTaskPlanner.Pages.Login
@using System.Security.Claims
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HOFORTaskPlanner</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">HOFOR</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Assignment/GetAssignments">Opgaver</a>
                        </li>
                        <li>
                            <a class="nav-link text-dark" asp-area="" asp-page="/Assignment/Dashboard">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/User/GetUsers">Brugere</a>
                        </li>
                        <li>
                            <a class="nav-link text-dark" asp-area="" asp-page="/Contact/GetContacts">Kontakter</a>
                        </li>


                    </ul>
                    <ul class="navbar-nav navbar-right align-items-center">
                        @{
                            if (LoginPageModel.LoggedInUser == null)
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-page="/Index">Login</a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item nav-link mr-3">
                                    User: @LoginPageModel.LoggedInUser.UserName
                                    ID: @LoginPageModel.LoggedInUser.UserId
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-page="/Login/LogoutPage">Logout</a>
                                </li>
                            }
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - HOFORTaskPlanner - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
